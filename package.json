{
  "name": "glukograd",
  "version": "1.0.0",
  "scripts": {
    "dev": "concurrently \"dotenv -e .env.dev nodemon server/index.ts\" \"dotenv -e .env.dev webpack --mode development --watch\"",
    "dev:fast": "concurrently \"dotenv -e .env.dev nodemon server/index.ts\" \"dotenv -e .env.dev webpack --mode development --watch --progress\"",
    "start": "dotenv -e .env ts-node server/index.ts",
    "start:prod": "node dist/server/index.js",
    "build": "npm run build:client && npm run build:server",
    "build:client": "./node_modules/.bin/webpack --mode production",
    "build:server": "tsc --project tsconfig.server.json",
    "build:dev": "npx webpack --mode development",
    "clean": "rm -rf dist .tsbuildinfo client/public/bundle*",
    "type-check": "tsc --noEmit",
    "prebuild": "npm run clean",
    "copy-assets": "cp -r client/public/images dist/client/public/ && cp -r client/public/models dist/client/public/ && cp -r client/public/textures dist/client/public/"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "dependencies": {
    "@babylonjs/core": "^8.23.1",
    "@babylonjs/loaders": "^8.23.1",
    "@types/nodemailer": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.18.0",
    "nodemailer": "^7.0.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "concurrently": "^9.2.0",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "dotenv-cli": "^10.0.0",
    "html-webpack-plugin": "^5.6.4",
    "nodemon": "^3.1.10",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
